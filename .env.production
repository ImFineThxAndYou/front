# 🌐 API 서버 설정 (프로덕션)
NEXT_PUBLIC_API_BASE_URL=https://api.howareu.click

# 🔗 WebSocket 서버 설정 (프로덕션)
NEXT_PUBLIC_WS_BASE_URL=https://api.howareu.click

# 📱 애플리케이션 설정
NEXT_PUBLIC_APP_NAME=HowAreYou
NEXT_PUBLIC_APP_VERSION=2.0.0

# 🌍 배포 환경
NEXT_PUBLIC_ENVIRONMENT=production

# 🔧 AWS Amplify 배포 설정
NEXT_PUBLIC_AMPLIFY_ENV=production

# 📊 분석 및 모니터링
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# 🔐 보안 설정
NEXT_PUBLIC_COOKIE_SECURE=true
NEXT_PUBLIC_COOKIE_SAME_SITE=strict

# 🌐 CORS 설정 (프론트엔드에서 참조용)
NEXT_PUBLIC_ALLOWED_ORIGINS=https://howareu.click

# 🔐 OAuth 리다이렉트 URI (프로덕션)
NEXT_PUBLIC_REDIRECT_URI=https://howareu.click/signup/callback
